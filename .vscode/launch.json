  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["backend.app.main:app", "--reload", "--host", "localhost"],
      "python": "${workspaceFolder}/myenv/Scripts/python",
      "envFile": "${workspaceFolder}/backend/app/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend/app"
      },
      "jinja": true
    }
  ]
}
